xa = trainfeat(1:10,:);
xb = trainfeat(11:20,:);
xc = trainfeat(21:30,:);
scatter(xa(:, 1), xa(:,2), 'r', 'o');
scatter(xb(:, 1), xb(:,2), 'b', 'x');
scatter(xc(:, 1), xc(:,2), 'c', '*');
% train the gaussians
mua = mean(xa);
mub = mean(xb);
muc = mean(xc);
covara = cov(xa);
covarb = cov(xb);
covarc = cov(xc);
testa = testfeat(1:5,:);
testb = testfeat(6:10,:);
testc = testfeat(11:15,:);
testaOut = [mvnpdf(testfeat,mua,covara),mvnpdf(testfeat,mub,covarb),mvnpdf(testfeat,muc,covarc)];
[maxaOut, classa] = max(testaOut,[],2);
xsd11 = std(xa(:,1));
xsd12 = std(xb);
xsd3 = std(xc);

maxsd1 = max(xsd,ysd);
x = xmu-2*maxsd:0.1:xmu+2*maxsd; % location of points at which x is calculated
y = ymu-2*maxsd:0.1:ymu+2*maxsd; % location of points at which y is calculated
[X1, Y1] = meshgrid(x1,y1); % matrices used for plotting
